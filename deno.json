{
	"tasks": {
		"dev:server": "deno run -A --watch src/server.ts",
		"build:client": "deno bundle src/client.tsx dist/client.js",
		"dev:client": "deno bundle --watch src/client.tsx -o dist/client.js",
		"dev": {
			"dependencies": ["dev:client", "dev:server"]
		}
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@1",
		"@types/react": "npm:@types/react@^19.2.0",
		"hono": "jsr:@hono/hono@^4.6.17",
		"lucide-react": "npm:lucide-react@^0.542.0",
		"react": "npm:react@^19.2.0"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 2,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["src/"],
		"exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react"
	},
	"exclude": [
		"dist/"
	]
}
